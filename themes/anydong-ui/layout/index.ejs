<% page.posts.each(function(post){ %>
    <div class="ui card">
        <div class="content">
            <a href="<%- post.permalink %>" class="header"><%- post.title %></a>
            <div class="meta">
                <span class="date"><%- post.date.toString() %></span>
            </div>
            <div class="description">
                    <%- post.excerpt %>
            </div>
        </div>
        <div class="extra content">
                <% post.tags.forEach(function(tag){ %>
                   <a class="ui tag label" href="<%- tag.permalink %>"><%- tag.name %></a> 
               <% })  %>
        </div>
    </div>
<% }) %>